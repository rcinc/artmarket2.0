<p id="notice"><%= notice %></p>

<h1>Listing Shopping Cart Items</h1>

<table>
  <thead>
    <tr>
      <th>Owner</th>
      <th>Owner type</th>
      <th>Quantity</th>
      <th>Item</th>
      <th>Item type</th>
      <th>Price</th>
      <th>Created at</th>
      <th>Updated at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shopping_cart_items.each do |shopping_cart_item| %>
      <tr>
        <td><%= shopping_cart_item.owner_id %></td>
        <td><%= shopping_cart_item.owner_type %></td>
        <td><%= shopping_cart_item.quantity %></td>
        <td><%= shopping_cart_item.item_id %></td>
        <td><%= shopping_cart_item.item_type %></td>
        <td><%= shopping_cart_item.price %></td>
        <td><%= shopping_cart_item.created_at %></td>
        <td><%= shopping_cart_item.updated_at %></td>
        <td><%= link_to 'Show', shopping_cart_item %></td>
        <td><%= link_to 'Edit', edit_shopping_cart_item_path(shopping_cart_item) %></td>
        <td><%= link_to 'Destroy', shopping_cart_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

